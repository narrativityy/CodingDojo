@model LogUser

<form asp-action="LoginUser" asp-asp-controller="User" method="post" class="col-6">
    <h2>Log In</h2>
    <div class="form-group">
        <label asp-for="LogEmail">Email: </label>
        <input class="form-control" asp-for="LogEmail">
        <span class="text-danger" asp-validation-for="LogEmail"></span>
    </div>
    <div class="form-group">
        <label asp-for="LogPassword">Password: </label>
        <input class="form-control" asp-for="LogPassword">
        <span class="text-danger" asp-validation-for="LogPassword"></span>
    </div>
    <button class="mt-2 btn btn-outline-dark" type="submit">Login</button>
</form>