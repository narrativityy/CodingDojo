@model Dish

@{
    ViewData["Title"] = $"Edit {Model.Name}";
}

<form asp-controller="Dish" asp-action="UpdateDish" asp-route-id="@Model.DishId" method="post">
    <div>
        <label asp-for="Name">Name: </label>
        <input asp-for="Name" value="@Model.Name">
    </div>
    <div>
        <label asp-for="Chef">Chef: </label>
        <input asp-for="Chef" value="@Model.Chef">
    </div>
    <div>
        <label asp-for="Tastiness">Tastiness: </label>
        <input asp-for="Tastiness" value="@Model.Tastiness">
    </div>
    <div>
        <label asp-for="Calories">Calories: </label>
        <input asp-for="Calories" value="@Model.Calories">
    </div>
    <div>
        <label asp-for="Description">Description: </label>
        <input asp-for="Description" value="@Model.Description">
    </div>
    <button class="mt-2 btn btn-dark" type="submit">Edit</button>
</form>