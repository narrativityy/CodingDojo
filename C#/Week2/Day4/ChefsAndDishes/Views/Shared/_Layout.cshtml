<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ChefsAndDishes.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="d-flex justify-content-center align-items-center gap-3 my-3">
            <a asp-controller="Chef" asp-action="Index"><h3>Chefs</h3></a>
            <h3>|</h3>
            <a asp-controller="Dish" asp-action="Dishes"><h3>Dishes</h3></a>
            <h3>|</h3>
            <a asp-controller="Chef" asp-action="NewChef"><h3>Add a Chef</h3></a>
            <h3>|</h3>
            <a asp-controller="Dish" asp-action="NewDish"><h3>Add a Dish</h3></a>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
