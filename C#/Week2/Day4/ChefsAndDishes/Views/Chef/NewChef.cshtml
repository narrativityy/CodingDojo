@model Chef

@{
    ViewData["title"] = "New Chef";
}

<div class="d-flex justify-content-center align-items-center text-center">
    <div>
        <form asp-controller="Chef" asp-action="CreateChef">
            <div>
                <label asp-for="FirstName">First Name: </label>
                <input asp-for="FirstName">
                <br>
                <span class="text-danger" asp-validation-for="FirstName"></span>
            </div>
            <div class="mt-2">
                <label asp-for="LastName">Last Name: </label>
                <input asp-for="LastName">
                <br>
                <span class="text-danger" asp-validation-for="LastName"></span>
            </div>
            <div class="mt-2">
                <label asp-for="DateOfBirth">Date Of Birth: </label>
                <input asp-for="DateOfBirth" type="date">
                <br>
                <span class="text-danger" asp-validation-for="DateOfBirth"></span>
            </div>
            <button class="btn btn-outline-dark mt-2" type="submit">Create</button>
        </form>
    </div>
</div>