<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Wedding Planner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WeddingPlanner.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="d-flex justify-content-between align-items-center text-center m-2 p-2 pb-0">
        <h2>Welcome @ViewBag.User.FirstName</h2>
        <div>
            <h4> <a asp-controller="Wedding" asp-action="Weddings">Home</a> | <a asp-controller="Wedding" asp-action="NewWedding">Plan a Wedding</a> | <a asp-controller="User" asp-action="Logout">Logout</a></h4>
        </div>
    </header>
    <hr class="mx-2">
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
